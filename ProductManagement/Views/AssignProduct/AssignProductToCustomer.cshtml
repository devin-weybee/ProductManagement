@model AssignProductRequest
@{
    ViewBag.Title = "Assign Product to Customer";
}

<h2>Assign Product to Customer</h2>

<div class="form-container">
    <div class="form-box">
        <form asp-controller="AssignProduct" asp-action="AssignProductToCustomer" method="post">

            <!-- Customer Dropdown -->
            <div class="form-group">
                <label for="customerSelect">Select Customer</label>
                <select id="customerSelect" name="customerId" class="form-control">
                    <option value="">-- Select a Customer --</option>
                    @foreach (var customer in ViewBag.Customers)
                    {
                        <option value="@customer.Value">@customer.Text</option>
                    }
                </select>
            </div>

            <!-- Product Dropdown -->
            <div class="form-group">
                <label for="productSelect">Select Product</label>
                <select id="productSelect" name="productId" class="form-control">
                    <option value="">-- Select a Product --</option>
                    @foreach (var product in ViewBag.Products)
                    {
                        <option value="@product.Value">@product.Text</option>
                    }
                </select>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary mt-10">Assign Product</button>
            <a asp-controller="AssignProduct" asp-action="Index" class="text-center mt-10">
                ← Back to Customer List
            </a>
        </form>
    </div>
</div>
