@model CustomerResponse

@{
    ViewBag.Title = "Delete Customer";
}

<div class="form-container">
    <div class="form-box text-center">
        <a asp-controller="Home" asp-action="Index">← Back to Customer List</a>

        <h2>Delete Customer</h2>
        <h4 style="color:#555;">Are you sure you want to delete this customer?</h4>

        <form asp-controller="Home" asp-action="DeleteCustomerConfirmed"
              asp-route-customerId="@Model.CustomerID" method="post">

            <div class="form-group">
                <label asp-for="CustomerID"></label>
                <input asp-for="CustomerID" value="@Model.CustomerID" disabled />
            </div>

            <div class="form-group">
                <label asp-for="CustomerName"></label>
                <input asp-for="CustomerName" value="@Model.CustomerName" disabled />
            </div>

            <div class="form-group">
                <label asp-for="CustomerEmail"></label>
                <input asp-for="CustomerEmail" value="@Model.CustomerEmail" disabled />
            </div>

            <button type="submit" class="btn btn-danger mt-10">Delete Customer</button>

            <a asp-controller="Home" asp-action="Index" class="mt-10">Cancel</a>
        </form>
    </div>
</div>
